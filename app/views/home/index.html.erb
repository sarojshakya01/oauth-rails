<div class="row">
  <div class="col">
    <h1 class="display-4">OAuth Server</h1>
  </div>
</div>

<div class="row">
  <div class="col">
    <% if current_user %>
      <p>You're not logged in, follow the links below to explore the example app.</p>
      <p>
        <%# <%= link_to 'Projects', projects_path, class: 'btn btn-primary' %>
        <%= link_to 'OAuth Applications', oauth_applications_path, class: 'btn btn-primary'%>
        <%# <%= link_to 'Authorized Apps', oauth_authorized_applications_path, class: 'btn btn-primary'%>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-secondary'%>
      </p>
    <% else %>
      <p>Sign in below to link your app:</p>
      <p><%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary' %></p>
    <% end %>
  </div>
</div>
