<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
  </div>

  <div class="form-group">
    <div class="showHidePassword">
      <%= f.password_field :password, autocomplete: "off", class: "input-lg", :append => "<i class='fa fa-eye-slash'></i>".html_safe %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: 'input-lg', autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.button "Sign up", class: "btn btn-default btn-lg" %>
  </div>
<% end %>

<%= render "users/shared/links" %>